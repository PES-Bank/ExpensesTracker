@model IEnumerable<ExpensesTracker.Web.Data.Entities.Expense>

@{
    ViewData["Title"] = "Expenses";
}

<h1>Index</h1>

<p>
    <a id="createButton" asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ExpenseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpenseDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpenseType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpenseAmount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ExpenseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpenseDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpenseType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpenseAmount)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ExpenseId"class="btn btn-primary">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ExpenseId"class="btn btn-primary">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ExpenseId"class=" btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

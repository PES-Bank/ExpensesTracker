@model ExpensesTracker.Web.Data.Entities.Expense

@{
	ViewData["Title"] = "Delete";
}
@if (Model is null)
{
	<p>No expense was found with this Id</p>
}
else
{


	<h1>Delete</h1>

	<h3>Are you sure you want to delete this?</h3>
	<div>
		<h4>Expense</h4>
		<hr />
		<dl class="row">
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.ExpenseName)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.ExpenseName)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.ExpenseDescription)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.ExpenseDescription)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.ExpenseType)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.ExpenseType)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.ExpenseAmount)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.ExpenseAmount)
			</dd>
		</dl>

		<form asp-action="Delete">
			<input type="hidden" asp-for="Id" />
			<input type="submit" value="Delete" class="btn btn-danger" />
			<a asp-action="Index">Back to List</a>
		</form>
		|

	</div>
}
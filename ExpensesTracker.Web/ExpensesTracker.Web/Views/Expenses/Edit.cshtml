@{
}

@model ExpensesTracker.Web.Data.Entities.Expense

@if (Model is null)
{
    <p>No expense was found with this Id</p>
}
else
{
    <h1>Add Expense</h1>
    <form method="post">

        <div class="mt-3">
            <label class="form-label">Expense</label>
            <input type="text" class="form-control" asp-for="ExpenseName" />
        </div>

        <div class="mt-3">
            <label class="form-label">Description</label>
            <input type="text" class="form-control" asp-for="ExpenseDescription" />
        </div>

        <div class="mt-3">
            <label class="form-label">Amount</label>
            <input type="text" class="form-control" asp-for="ExpenseAmount" />
        </div>

        <div class="dropdown">
            <label class="form-label" asp-for="ExpenseType">Period:</label>
            <select class="dropbtn" asp-for="ExpenseType">
                <option value="">Select Period</option>
                <option value="Daily">Daily</option>
                <option value="Monthly">Monthly</option>
                <option value="Yearly">Yearly</option>
            </select>
        </div>


        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger ms-3" asp-action="Remove" asp-controller="Expenses">Remove</button>
        </div>
    </form>
}
